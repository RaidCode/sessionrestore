{
	// Required
	"manifest_version": 2,
	"name": "Session restore",
	"version": "0.6.3",

	// Recommended
	"description": "Restores Chrome to where you left without loading all the tabs for a fast, efficient and smooth start.",
	"icons": {
		"128": "img/logo.png"
	},

	// Pick one (or none)
	"browser_action": {
		"default_icon": {
			"38":"img/favicon.png"
		},
		"default_title": "Session restore",
		"default_popup": "options.html"
	},

	// Optional
	"background": {
		"page": "back.html"
	},
	"options_page": "options.html",
	"permissions": [
		"tabs",
		"<all_urls>",
		"storage",
		"alarms"
	],
	"web_accessible_resources": [
		"js/newtab.js",
		"js/backload.js",
		"js/backsave.js",
		"js/jquery.min.js",
		"js/semantic.min.js"
	]
}
